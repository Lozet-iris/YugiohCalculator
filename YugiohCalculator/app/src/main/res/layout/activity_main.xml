<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.lozet.yugiohcalculator.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <!-- プレイヤー名 -->

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn2"
        android:text="2"
        app:layout_constraintLeft_toLeftOf="@+id/btn5"
        app:layout_constraintRight_toRightOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn3"
        android:text="3"
        app:layout_constraintLeft_toLeftOf="@+id/btn6"
        app:layout_constraintRight_toRightOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn4"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="@+id/btn7"
        app:layout_constraintRight_toRightOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn5"
        android:text="5"
        app:layout_constraintLeft_toLeftOf="@+id/btn8"
        app:layout_constraintRight_toRightOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn6"
        android:text="6"
        app:layout_constraintLeft_toLeftOf="@+id/btn9"
        app:layout_constraintRight_toRightOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn1"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn4"
        app:layout_constraintRight_toRightOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn000"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:onClick="btn000"
        android:text="000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn00"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:onClick="btn00"
        android:text="00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:onClick="btn0"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="@+id/btn1"
        app:layout_constraintRight_toRightOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:onClick="btnEqual"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn00"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="51dp"
        android:onClick="btn8"
        android:text="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLifeReset"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="51dp"
        android:onClick="btn9"
        android:text="9"
        app:layout_constraintRight_toRightOf="@+id/btnReturn"
        app:layout_constraintTop_toBottomOf="@+id/btnRight"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:onClick="btn7"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLeft"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:onClick="btnReturn"
        android:text="戻る"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCost"
        app:layout_constraintLeft_toLeftOf="@+id/btnRight"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="16dp"
        android:onClick="btnPlus"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMinus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnLeft"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="49dp"
        android:onClick="btnMinus"
        android:text="－"
        app:layout_constraintLeft_toLeftOf="@+id/btnPlus"
        app:layout_constraintRight_toRightOf="@+id/btnCost"
        app:layout_constraintTop_toBottomOf="@+id/LifePointP1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnCost"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginEnd="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginStart="86dp"
        android:text="コスト"
        app:layout_constraintBottom_toBottomOf="@+id/btnMinus"
        app:layout_constraintLeft_toRightOf="@+id/btnPlus"
        app:layout_constraintRight_toRightOf="@+id/btnRight"
        app:layout_constraintTop_toTopOf="@+id/btnMinus"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:text="←"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintLeft_toLeftOf="@+id/btn7"
        app:layout_constraintRight_toRightOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/LifePointP1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="→"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLifeReset"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/btnLifeReset"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="49dp"
        android:onClick="btnLifeReset"
        android:text="リセット"
        app:layout_constraintBottom_toBottomOf="@+id/btnCost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LifePointP1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/LifePointP1"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="18dp"
        android:onClick="txtPL1"
        android:selectAllOnFocus="false"
        android:text="8000"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintRight_toLeftOf="@+id/PlayerNameP2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlayerNameP1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="8000" />

    <TextView
        android:id="@+id/PlayerNameP1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="プレイヤー1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/PlayerNameP2"
        app:layout_constraintLeft_toLeftOf="@+id/LifePointP1"
        app:layout_constraintRight_toRightOf="@+id/LifePointP1"
        app:layout_constraintTop_toTopOf="@+id/PlayerNameP2"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="プレイヤー1" />

    <TextView
        android:id="@+id/PlayerNameP2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:text="プレイヤー2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/LifePointP2"
        app:layout_constraintRight_toRightOf="@+id/LifePointP2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="プレイヤー2" />

    <TextView
        android:id="@+id/LifePointP2"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:onClick="txtPL2"
        android:text="8000"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlayerNameP2"
        tools:layout_constraintTop_creator="1"
        tools:text="8000" />

</android.support.constraint.ConstraintLayout>
